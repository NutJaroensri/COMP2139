@model List<Project>
@{
    ViewData["Title"] = "Projects";

}

<h2> Projects</h2>

@if (Model.Any()){
    <table class="table">
        <thead>
            <tr>
                <td>
                    ID
                </td>
                <td>
                    Name
                </td>
                <td>
                    Description
                </td>
                <td>Actions</td>
            </tr>

        </thead>
        <tbody>
        @foreach(var project in Model)
        {
           <tr>
               <td> @project.Project_id</td>
               <td> @project.Name</td>
               <td> @project.Description</td>
               <td>
                        <a asp-route-id="@project.Project_id" class="btn btn-info" asp-controller="Projects" asp-action="Details">Details</a>
                        <a asp-route-id="@project.Project_id" class="btn btn-danger" asp-controller="Projects" asp-action="Delete">Delete</a>

               </td>

           </tr>         



        }


        </tbody>





    </table>


}else{
    <p>No Project</p>
}

<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="Create">Create Project</a>
</p>
